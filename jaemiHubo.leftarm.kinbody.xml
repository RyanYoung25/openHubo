<?xml version="1.0" encoding="utf-8"?>

<!-- Left arm kinematic body of the Jaemi Hubo humanoids -->

<KinBody name="leftArm" makejoinedlinksadjacent="true">
<modelsdir>../CAD/VRML</modelsdir>
    <Body name="Torso" type="dynamic">
        <Translation>0.03 0.7 0</Translation>
        <Geom type="trimesh" render="true">
            <Data>KHR-4_Torso.wrl 1.0</Data>
            <render>KHR-4_Torso.wrl    1.0</render>
        </Geom>
        <mass type="custom">
            <total>1</total>
        </mass>
    </Body>
    <Body name="Larm1" type="dynamic">
        <offsetfrom>Torso</offsetfrom>
        <Translation>0.023 0.031 0.007</Translation>
        <Geom type="trimesh">
            <Data>L_SHOULDER_PITCH.wrl 1.0</Data>
            <Render>L_SHOULDER_PITCH.wrl 1.0</Render>
            <diffusecolor>.1 .9 .1</diffusecolor>
            <ambientcolor>.1 .1 .1</ambientcolor>
        </Geom>
        <mass type="custom">
            <total>1</total>
        </mass>
    </Body>
    <Joint name="LSP" type="hinge">
        <Body>Torso</Body>
        <Body>Larm1</Body>
        <offsetfrom>Larm1</offsetfrom>
        <axis>0 0 -1</axis>
        <!-- Settings from WAM, will need to be updated-->
        <limitsdeg>-150 150</limitsdeg>
        <maxvel>1.5708</maxvel>
        <weight>1.92154</weight>
        <resolution>0.25</resolution>
    </Joint>
    <Body name="Larm2" type="dynamic">
        <offsetfrom>Larm1</offsetfrom>
        <Translation>-0.024 0 0.077</Translation>

        <Geom type="trimesh">
            <Data>L_SHOULDER_ROLL.wrl 1.0</Data>
            <Render>L_SHOULDER_ROLL.wrl 1.0</Render>
            <diffusecolor>.1 .7 .1</diffusecolor>
            <ambientcolor>.1 .1 .1</ambientcolor>
        </Geom>
        <mass type="custom">
            <total>1</total>
        </mass>
    </Body>
    <Joint name="LSR" type="hinge">
        <Body>Larm1</Body>
        <Body>Larm2</Body>
        <offsetfrom>Larm2</offsetfrom>
        <axis>-1 0 0</axis>
        <limitsdeg>-113 113</limitsdeg>
        <weight>0.91739941</weight>
        <maxvel>1.0472</maxvel>
        <resolution>0.5</resolution>
    </Joint>
    <Body name="Larm3" type="dynamic">
        <offsetfrom>Larm2</offsetfrom>
        <Translation>0.031 -0.04 -0.003</Translation>
        <Geom type="trimesh">
            <Data>L_SHOULDER_YAW.wrl    1.0</Data>
            <Render>L_SHOULDER_YAW.wrl    1.0</Render>
            <diffusecolor>.2 .5 .1</diffusecolor>
            <ambientcolor>.1 .1 .1</ambientcolor>
        </Geom>
        <mass type="custom">
            <total>1</total>
        </mass>
    </Body>
    <Joint name="LSY" type="hinge">
        <Body>Larm2</Body>
        <Body>Larm3</Body>
        <offsetfrom>Larm3</offsetfrom>
        <axis>0 -1 0</axis>
        <limitsdeg>-157 157</limitsdeg>
        <weight>0.882397</weight>
        <maxvel>2.0944</maxvel>
        <resolution>0.5</resolution>
    </Joint>
    <Body name="Larm4" type="dynamic">
        <offsetfrom>Larm3</offsetfrom>
        <Translation>-0.026 -0.139 -0.017</Translation>
        <Geom type="trimesh">
            <Data>L_ELBOW_PITCH.wrl    1.0</Data>
            <Render>L_ELBOW_PITCH.wrl    1.0</Render>
            <diffusecolor>.3 .3 .1</diffusecolor>
            <ambientcolor>.1 .1 .1</ambientcolor>
        </Geom>
        <mass type="custom">
            <total>0.4809</total>
        </mass>
    </Body>
    <Joint name="LEP" type="hinge">
        <Body>Larm3</Body>
        <Body>Larm4</Body>
        <offsetfrom>Larm4</offsetfrom>
        <axis>0 0 1</axis>
        <limitsdeg>-50 180</limitsdeg>
        <weight>0.45504</weight>
        <maxvel>2.0944</maxvel>
        <resolution>1</resolution>
    </Joint>
    <Body name="Larm5" type="dynamic">
        <offsetfrom>Larm4</offsetfrom>
        <Translation>0.022 -0.06 0.015</Translation>
        <Geom type="trimesh">
            <Data>L_WRIST_YAW.wrl    1.0</Data>
            <Render>L_WRIST_YAW.wrl    1.0</Render>
        </Geom>
        <mass type="custom">
            <total>1.6015</total>
        </mass>
    </Body>
    <Joint name="LWY" type="hinge">
        <Body>Larm4</Body>
        <Body>Larm5</Body>
        <offsetfrom>Larm5</offsetfrom>
        <axis>0 1 0</axis>
        <limitsdeg>-275 75</limitsdeg>
        <weight>0.40141</weight>
        <maxvel>4.1888</maxvel>
        <resolution>1.11</resolution>
    </Joint>
    <!--Crude flappy fingers in box form for now, to complete IK chain-->
    <Body name="Hand_box" type="dynamic">
        <offsetfrom>Larm5</offsetfrom>
        <Translation>0 -.22 0</Translation>
        <Rotationaxis>1 0 0 90</Rotationaxis>
        <Geom type="box">
            <extents>.008 .075 .06</extents>
            <Translation>.03 0 .025</Translation>
            <RotationAxis>0 0 1 20</RotationAxis>
            <diffusecolor>.1 .1 .1</diffusecolor>
        </Geom>
        <Geom type="box">
            <extents>.008 .005 .06</extents>
            <Translation>0.01 0 .025</Translation>
            <diffusecolor>.3 .3 .3</diffusecolor>
        </Geom>
        <Geom type="box">
            <extents>.008 .005 .06</extents>
            <Translation>-0.01 0 .025</Translation>
            <diffusecolor>.5 .5 .5</diffusecolor>
        </Geom>
        <Geom type="box">
            <extents>.008 .075 .06</extents>
            <Translation>-0.03 0 .025</Translation>
            <RotationAxis>0 0 1 -20</RotationAxis>
            <diffusecolor>.7 .7 .7</diffusecolor>
        </Geom>
    </Body>
     <Joint name="LWP" type="hinge">
        <Body>Larm5</Body>
        <Body>Hand_box</Body>
        <offsetfrom>Hand_box</offsetfrom>
        <axis>1 0 0</axis>
        <Weight>1</Weight>
    </Joint>

</KinBody>
