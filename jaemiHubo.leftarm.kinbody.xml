<?xml version="1.0" encoding="utf-8"?>

<!-- left arm kinematic tree -->
<!-- The torso is defined in multiple places, weventually need to find a good structure to join arms-->
<KinBody name="leftArm" makejoinedlinksadjacent="true">
<modelsdir>exportedModels/VRML</modelsdir>
    <Body name="Torso_dummy1" type="dynamic">
    </Body>
    <Body name="leftArm1" type="dynamic">
        <offsetfrom>Torso_dummy1</offsetfrom>
        <Translation>0 0.1425 0</Translation>
        <Geom type="trimesh">
            <Data>Left_Shoulder_Pitch.wrl 1</Data>
            <Render>Left_Shoulder_Pitch.wrl 1</Render>
        </Geom>
    </Body>
    <Joint name="LSP" type="hinge">
        <Body>Torso_dummy1</Body>
        <Body>leftArm1</Body>
        <offsetfrom>leftArm1</offsetfrom>
        <axis>0 1 0</axis>
        <limitsdeg>-150 150</limitsdeg>
        <maxvel>1</maxvel>
        <resolution>.5</resolution>
        <weight>1</weight>
    </Joint>
    <Body name="leftArm2" type="dynamic">
        <offsetfrom>leftArm1</offsetfrom>
        <Translation>.025 .072 0</Translation>

        <Geom type="trimesh">
            <Data>Left_Shoulder_Roll.wrl 1</Data>
            <Render>Left_Shoulder_Roll.wrl 1</Render>
        </Geom>
    </Body>
    <Joint name="LSR" type="hinge">
        <Body>leftArm1</Body>
        <Body>leftArm2</Body>
        <offsetfrom>leftArm2</offsetfrom>
        <axis>-1 0 0</axis>
        <limitsdeg>-113 113</limitsdeg>
        <maxvel>1</maxvel>
        <resolution>.5</resolution>
        <weight>1</weight>
    </Joint>
    <Body name="leftArm3" type="dynamic">
        <offsetfrom>leftArm2</offsetfrom>
        <Translation>-0.0269 0.0 -0.0245</Translation>
        <Geom type="trimesh">
            <Data>Left_Shoulder_Yaw.wrl    1</Data>
            <Render>Left_Shoulder_Yaw.wrl    1</Render>
        </Geom>
        <mass type="custom">
            <total>1</total>
        </mass>
    </Body>
    <Joint name="LSY" type="hinge">
        <Body>leftArm2</Body>
        <Body>leftArm3</Body>
        <offsetfrom>leftArm3</offsetfrom>
        <axis>0 0 -1</axis>
        <limitsdeg>-157 157</limitsdeg>
        <maxvel>1</maxvel>
        <resolution>.5</resolution>
        <weight>1</weight>
    </Joint>
    <Body name="leftArm4" type="dynamic">
        <offsetfrom>leftArm3</offsetfrom>
        <Translation>.022279 0.0115 -.154441</Translation>
        <Geom type="trimesh">
            <Data>Left_Elbow_Pitch.wrl    1</Data>
            <Render>Left_Elbow_Pitch.wrl    1</Render>
        </Geom>
    </Body>
    <Joint name="LEP" type="hinge">
        <Body>leftArm3</Body>
        <Body>leftArm4</Body>
        <offsetfrom>leftArm4</offsetfrom>
        <axis>0 -1 0</axis>
        <limitsdeg>-20 150</limitsdeg>
        <maxvel>1</maxvel>
        <resolution>.5</resolution>
        <weight>1</weight>
    </Joint>
    <Body name="leftArm5" type="dynamic">
        <offsetfrom>leftArm4</offsetfrom>
        <Translation>-.022001 .0115 -.041</Translation>
        <Geom type="trimesh">
            <Data>Right_Wrist_Yaw.wrl    1</Data>
            <Render>Right_Wrist_Yaw.wrl    1</Render>
        </Geom>
    </Body>
    <Joint name="LWY" type="hinge">
        <Body>leftArm4</Body>
        <Body>leftArm5</Body>
        <offsetfrom>leftArm5</offsetfrom>
        <axis>0 0 -1</axis>
        <limitsdeg>-160 160</limitsdeg>
        <maxvel>1</maxvel>
        <resolution>.5</resolution>
        <weight>1</weight>
    </Joint>

    <Body name="left_ujoint" type="dynamic">
       <offsetfrom>leftArm5</offsetfrom> 
        <Translation>0 0 -.122</Translation> 
        <Geom type="trimesh">
            <Data>Right_Wrist_UJoint.wrl    1</Data>
            <Render>Right_Wrist_UJoint.wrl    1</Render>
        </Geom>
    </Body>

    <Joint name="LWR" type="hinge">
        <Body>leftArm5</Body>
        <Body>left_ujoint</Body>
        <offsetfrom>left_ujoint</offsetfrom>
        <axis>-1 0 0</axis>
        <Weight>1</Weight>
        <limitsdeg>-30 30</limitsdeg>
        <maxvel>1</maxvel>
        <resolution>.5</resolution>
        <weight>1</weight>
    </Joint>

    <Body name="left_palm" type="dynamic">
       <offsetfrom>left_ujoint</offsetfrom> 
        <Translation>0 0 0</Translation> 
        <RotationAxis>0 0 1 180</RotationAxis>
        <Geom type="trimesh">
            <Data>Left_Wrist_Palm.wrl    1</Data>
            <Render>Left_Wrist_Palm.wrl    1</Render>
        </Geom>
    </Body>

    <Joint name="LWP" type="hinge">
        <Body>left_palm</Body>
        <Body>left_ujoint</Body>
        <offsetfrom>left_palm</offsetfrom>
        <axis>0 1 0</axis>
        <limitsdeg>-30 30</limitsdeg>
        <maxvel>1</maxvel>
        <resolution>.5</resolution>
        <weight>1</weight>
    </Joint>
    <adjacent>leftArm5 left_palm </adjacent>
</KinBody>
