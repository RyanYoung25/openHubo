<?xml version="1.0" encoding="utf-8"?>

<!-- Right arm kinematic tree -->
<!-- The torso is defined in multiple places, weventually need to find a good structure to join arms-->
<KinBody name="rightArm" makejoinedlinksadjacent="true">
<modelsdir>../exportedModels/openInventor</modelsdir>
    <Body name="Torso" type="dynamic">
        <Geom type="trimesh" render="true">
            <Data>KHR-4_Torso.iv 1</Data>
            <render>KHR-4_Torso.iv    1</render>
        </Geom>
    </Body>
    <Body name="rightArm1" type="dynamic">
        <offsetfrom>Torso</offsetfrom>
        <Translation>0 -0.1425 0</Translation>
        <Geom type="trimesh">
            <Data>right_shoulder_pitch.iv 1</Data>
            <Render>right_shoulder_pitch.iv 1</Render>
        </Geom>
    </Body>
    <Joint name="RSP" type="hinge">
        <Body>Torso</Body>
        <Body>rightArm1</Body>
        <offsetfrom>rightArm1</offsetfrom>
        <axis>0 1 0</axis>
        <limitsdeg>-150 150</limitsdeg>
        <maxvel>1</maxvel>
        <resolution>.5</resolution>
        <weight>1</weight>
    </Joint>
    <Body name="rightArm2" type="dynamic">
        <offsetfrom>rightArm1</offsetfrom>
        <Translation>.025 -.072 0</Translation>

        <Geom type="trimesh">
            <Data>right_shoulder_roll.iv 1</Data>
            <Render>right_shoulder_roll.iv 1</Render>
        </Geom>
    </Body>
    <Joint name="RSR" type="hinge">
        <Body>rightArm1</Body>
        <Body>rightArm2</Body>
        <offsetfrom>rightArm2</offsetfrom>
        <axis>-1 0 0</axis>
        <limitsdeg>-113 113</limitsdeg>
        <maxvel>1</maxvel>
        <resolution>.5</resolution>
        <weight>1</weight>
    </Joint>
    <Body name="rightArm3" type="dynamic">
        <offsetfrom>rightArm2</offsetfrom>
        <Translation>-0.0269 0.0 -0.0245</Translation>
        <Geom type="trimesh">
            <Data>right_shoulder_yaw.iv    1</Data>
            <Render>right_shoulder_yaw.iv    1</Render>
        </Geom>
        <mass type="custom">
            <total>1</total>
        </mass>
    </Body>
    <Joint name="RSY" type="hinge">
        <Body>rightArm2</Body>
        <Body>rightArm3</Body>
        <offsetfrom>rightArm3</offsetfrom>
        <axis>0 0 -1</axis>
        <limitsdeg>-157 157</limitsdeg>
        <maxvel>1</maxvel>
        <resolution>.5</resolution>
        <weight>1</weight>
    </Joint>
    <Body name="rightArm4" type="dynamic">
        <offsetfrom>rightArm3</offsetfrom>
        <Translation>.022279 -.0115 -.154441</Translation>
        <Geom type="trimesh">
            <Data>right_elbow_pitch.iv    1</Data>
            <Render>right_elbow_pitch.iv    1</Render>
        </Geom>
    </Body>
    <Joint name="REP" type="hinge">
        <Body>rightArm3</Body>
        <Body>rightArm4</Body>
        <offsetfrom>rightArm4</offsetfrom>
        <axis>0 -1 0</axis>
        <limitsdeg>-20 150</limitsdeg>
        <maxvel>1</maxvel>
        <resolution>.5</resolution>
        <weight>1</weight>
    </Joint>
    <Body name="rightArm5" type="dynamic">
        <offsetfrom>rightArm4</offsetfrom>
        <Translation>-.022001 .0115 -.041</Translation>
        <Geom type="trimesh">
            <Data>right_wrist_yaw.iv    1</Data>
            <Render>right_wrist_yaw.iv    1</Render>
        </Geom>
    </Body>
    <Joint name="RWY" type="hinge">
        <Body>rightArm4</Body>
        <Body>rightArm5</Body>
        <offsetfrom>rightArm5</offsetfrom>
        <axis>0 0 -1</axis>
        <limitsdeg>-160 160</limitsdeg>
        <maxvel>1</maxvel>
        <resolution>.5</resolution>
        <weight>1</weight>
    </Joint>

    <Body name="right_ujoint" type="dynamic">
       <offsetfrom>rightArm5</offsetfrom> 
        <Translation>0 0 -.122</Translation> 
        <Geom type="trimesh">
            <Data>right_wrist_ujoint.iv    1</Data>
            <Render>right_wrist_ujoint.iv    1</Render>
        </Geom>
    </Body>

    <Joint name="RWR" type="hinge">
        <Body>rightArm5</Body>
        <Body>right_ujoint</Body>
        <offsetfrom>right_ujoint</offsetfrom>
        <axis>-1 0 0</axis>
        <Weight>1</Weight>
        <limitsdeg>-30 30</limitsdeg>
        <maxvel>1</maxvel>
        <resolution>.5</resolution>
        <weight>1</weight>
    </Joint>

    <Body name="right_palm" type="dynamic">
       <offsetfrom>right_ujoint</offsetfrom> 
        <Translation>0 0 0</Translation> 
        <RotationAxis>0 0 1 180</RotationAxis>
        <Geom type="trimesh">
            <Data>right_wrist_palm.iv    1</Data>
            <Render>right_wrist_palm.iv    1</Render>
        </Geom>
    </Body>

    <Joint name="RWP" type="hinge">
        <Body>right_palm</Body>
        <Body>right_ujoint</Body>
        <offsetfrom>right_palm</offsetfrom>
        <axis>0 1 0</axis>
        <limitsdeg>-30 30</limitsdeg>
        <maxvel>1</maxvel>
        <resolution>.5</resolution>
        <weight>1</weight>
    </Joint>
</KinBody>
