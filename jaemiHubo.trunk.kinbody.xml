<?xml version="1.0" encoding="utf-8"?>

<!-- Right arm kinematic tree -->
<!-- The torso is defined in multiple places, weventually need to find a good structure to join arms-->
<KinBody name="Trunk" makejoinedlinksadjacent="true">
<modelsdir>models</modelsdir>
    <Body name="Torso" type="dynamic">
        <Geom type="trimesh" render="true">
            <render>KHR-4_Torso.wrl    1</render>
        </Geom>
        <Geom type="cylinder" render="false">
            <Translation>-0.032 -0.051 -0.064</Translation>
            <RotationAxis>1 0 0 90</RotationAxis>
            <radius>.114</radius>
            <height>.254</height>
        </Geom>
        <Geom type="cylinder" render="false">
            <Translation>0.032 -0.051 -0.064</Translation>
            <RotationAxis>1 0 0 90</RotationAxis>
            <radius>.114</radius>
            <height>.254</height>
        </Geom>
        <Geom type="cylinder" render="false">
            <Translation>-0.032 0.051 -0.064</Translation>
            <RotationAxis>1 0 0 90</RotationAxis>
            <radius>.114</radius>
            <height>.254</height>
        </Geom>
        <Geom type="cylinder" render="false">
            <Translation>0.032 0.051 -0.064</Translation>
            <RotationAxis>1 0 0 90</RotationAxis>
            <radius>.114</radius>
            <height>.254</height>
        </Geom>
    </Body>
    <Body name="hip" type="dynamic">
        <offsetfrom>Torso</offsetfrom>
        <Translation>0 0 -0.1915</Translation>
    	<RotationAxis>1 0 0 180</RotationAxis>
        <Geom type="trimesh">
            <Render>Hip.wrl 1</Render>
        </Geom>
        <Geom type="cylinder" render="false">
            <Translation>-0.003 0.038 0.052</Translation>
            <RotationAxis>1 0 0 -90</RotationAxis>
            <radius>.121</radius>
            <height>.105</height>
        </Geom>
        <Geom type="cylinder" render="false">
            <Translation>-0.003 -0.038 0.052</Translation>
            <RotationAxis>1 0 0 -90</RotationAxis>
            <radius>.121</radius>
            <height>.105</height>
        </Geom>
    </Body>
    <Joint name="TY" type="hinge">
        <Body>Torso</Body>
        <Body>hip</Body>
        <offsetfrom>hip</offsetfrom>
        <axis>0 0 1</axis>
        <limitsdeg>-90 90</limitsdeg>
        <maxvel>1</maxvel>
        <resolution>.5</resolution>
        <weight>1</weight>
    </Joint>
</KinBody>
