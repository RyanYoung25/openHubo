            <Render>Body_Torso.wrl    1</Render>
            <data>dummyBox.wrl .002</data>
        </Geom>
        <Geom type="cylinder" render="false">
            <Translation>-0.032 -0.051 -0.064</Translation>
            <RotationAxis>1 0 0 90</RotationAxis>
            <radius>.114</radius>
            <height>.254</height>
        </Geom>
        <Geom type="cylinder" render="false">
            <Translation>0.032 -0.051 -0.064</Translation>
            <RotationAxis>1 0 0 90</RotationAxis>
            <radius>.114</radius>
            <height>.254</height>
        </Geom>
        <Geom type="cylinder" render="false">
            <Translation>-0.032 0.051 -0.064</Translation>
            <RotationAxis>1 0 0 90</RotationAxis>
            <radius>.114</radius>
            <height>.254</height>
        </Geom>
        <Geom type="cylinder" render="false">
            <Translation>0.032 0.051 -0.064</Translation>
            <RotationAxis>1 0 0 90</RotationAxis>
            <radius>.114</radius>
            <height>.254</height>
        </Geom>
