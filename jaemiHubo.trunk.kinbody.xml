    </Body>
    <Joint name="TY" type="hinge">
        <Body>Torso</Body>
        <Body>hip</Body>
        <offsetfrom>hip</offsetfrom>
        <axis>0 0 1</axis>
        <limitsdeg>-90 90</limitsdeg>
        <maxvel>1</maxvel>
        <resolution>.5</resolution>
        <weight>1</weight>
    </Joint>
    <adjacent>Torso hip</adjacent>
</KinBody>
