<?xml version="1.0" encoding="utf-8"?>

<Environment>

    <KinBody name="CenteredSphere" makejoinedlinksadjacent="true">

        <Body name="Sphere" type="dynamic">
            <Translation>0 0 .5</Translation>
            <Geom type="sphere" render="true">
                <radius>.1</radius>
                <Diffusecolor>.8 .5 .5</Diffusecolor>
            </Geom>
            <Mass type="custom">
                <total>1</total>
            </Mass>
        </Body>

    </KinBody>
    <KinBody name="comFlagSphere" makejoinedlinksadjacent="true">

        <Body name="Sphere" type="dynamic">
            <Translation>0 .25 .5</Translation>
            <Geom type="sphere" render="true">
                <radius>.1</radius>
                <Diffusecolor>.5 .8 .5</Diffusecolor>
            </Geom>
            <Mass type="custom">
                <total>1</total>
                <com>-.5 0 0</com>
            </Mass>
        </Body>

    </KinBody>
    <KinBody name="TranslationSphere" makejoinedlinksadjacent="true">

        <Body name="Sphere" type="dynamic">
            <Translation>0 .5 .5</Translation>
            <Geom type="sphere" render="true">
                <radius>.1</radius>
                <Diffusecolor>.5 .5 .8</Diffusecolor>
            </Geom>
            <Mass type="custom">
                <Translation>-.5 0 0</Translation>
                <total>1</total>
            </Mass>
        </Body>

    </KinBody>
    <KinBody name="TestSphere" makejoinedlinksadjacent="true">

        <Body name="Sphere" type="dynamic">
            <Translation>0 .75 .5</Translation>
            <Geom type="sphere" render="true">
                <radius>.1</radius>
                <Diffusecolor>.5 .5 .8</Diffusecolor>
            </Geom>
            <Mass type="custom">
                <com>-.5 0 0</com>
                <total>1</total>
            </Mass>
        </Body>

    </KinBody>

    <KinBody name="floor">
        <Body name="plate" type="static">
            <translation>0 0 -.1</translation>
            <Geom type="box">
                <RotationAxis>0 1 0 0</RotationAxis>
                <extents>2 2 .1</extents>
            </Geom>
        </Body>
    </KinBody>

</Environment>
