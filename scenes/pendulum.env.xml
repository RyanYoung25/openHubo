<Environment>
    <camtrans>2.083061 1.894020 2.514546</camtrans>
    <camrotationaxis>-0.437281 -0.778980 0.449417 154.310694</camrotationaxis>
    <camfocal>2.928530</camfocal>

    <robot name="pendulum">
        <kinbody name="pendulum_kb">
            <body name="base" type="static">
                <translation>0 -1 0</translation>
                <geom type="box">
                    <extents>1 1 1</extents>
                    <diffusecolor>.2 .2 .2</diffusecolor>
                </geom>
            </body>

            <body name="pole" type="dynamic">
                <translation>0 .05 0</translation>
                <geometry type="cylinder">
                    <height>.1</height>
                    <radius>.05</radius>
                </geometry>
                <mass type="mimicgeom">
                    <total>100</total>
                </mass>
            </body>

            <body name="arm" type="dynamic">
                <offsetfrom>pole</offsetfrom>
                <translation>0 0.1 -0.4</translation>
                <geom type="box">
                    <extents>0.05 0.05 .5</extents>
                </geom>
                <mass type="mimicgeom">
                    <total>10</total>
                </mass>
            </body>

            <joint name="dummy_pole" enable="false">
                <body>base</body>
                <body>pole</body>
                <offsetfrom>pole</offsetfrom>
                <limitsdeg>0 0</limitsdeg>
            </joint>

            <joint name="j0" type="hinge" circular="true">
                <body>pole</body>
                <body>arm</body>
                <offsetfrom>pole</offsetfrom>
                <axis>0 1 0</axis>
            </joint>

            <adjacent>pole base</adjacent>
            <adjacent>pole arm</adjacent>

        </kinbody>
    </robot>
</Environment>
